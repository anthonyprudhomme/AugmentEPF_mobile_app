<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.filiereticsa.arc.augmentepf.activities.AdminActivity">

    <RadioGroup android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <RadioButton
            android:id="@+id/beaconEdit"
            android:layout_gravity="fill_vertical"
            android:layout_weight="1"
            android:text="Edit Beacons"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:onClick="onBeaconClick"/>

        <RadioButton
            android:id="@+id/PoIEdit"
            android:layout_gravity="fill_vertical"
            android:layout_weight="1"
            android:text="Edit Points of Interests"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:onClick="onPOIClick"/>
    </RadioGroup>

    <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView android:layout_marginLeft="5dp"
            android:text="X Coordinate :"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/xCoordText"
            android:layout_height="wrap_content"
            android:layout_width="100dp"/>

        <TextView android:text="Y Coordinate :"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/yCoordText"
            android:layout_height="wrap_content"
            android:layout_width="100dp"/>
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:layout_marginLeft="5dp"
                android:text="Name :"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <EditText
                android:id="@+id/item_name_Text"
                android:layout_height="wrap_content"
                android:layout_width="140dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:text="Closest :"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/closestText"
                android:layout_height="wrap_content"
                android:layout_width="100dp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView android:id="@+id/admin_imageView"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:background="@color/lightGrey"/>

    <LinearLayout android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="Current Position"
            android:onClick="onGPSClick"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Remove closest"
            android:onClick="onRemoveClick"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="Add"
            android:onClick="onSaveClick"/>
    </LinearLayout>

</LinearLayout>
