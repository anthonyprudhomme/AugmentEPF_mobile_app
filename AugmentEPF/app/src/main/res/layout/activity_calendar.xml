<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.filiereticsa.arc.augmentepf.activities.CalendarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ical_button"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/red_button"
            android:onClick="onIcalClicked"
            android:text="@string/ical"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/previous_button"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/red_button"
            android:onClick="onPreviousClicked"
            android:text="@string/previous"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/current_button"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/red_button"
            android:onClick="onCurrentClicked"
            android:text="@string/current"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/next_button"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/red_button"
            android:onClick="onNextClicked"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/current_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:id="@+id/gridLayoutContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <!-- Your content here -->

        </HorizontalScrollView>
    </ScrollView>

</LinearLayout>
