<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- General parameters -->
    <PreferenceCategory
        android:title="General">

        <!-- Notification -->
        <CheckBoxPreference
            android:key="notification_user"
            android:title="Notification"
            android:summary="Enable/disable notifications"
            android:defaultValue="true">
        </CheckBoxPreference>

        <!-- Localisation -->
        <CheckBoxPreference
            android:key="localisation_user"
            android:title="Localisation"
            android:summary="Enable/disable the localisation of the device"
            android:defaultValue="true">
        </CheckBoxPreference>
    </PreferenceCategory>

    <!-- User parameters -->
    <PreferenceCategory
        android:title="User parameters">

        <!-- User type -->
        <ListPreference
            android:key="type_user"
            android:title="Type"
            android:summary="Select user type"
            android:entryValues="@array/user_type_values_array">
        </ListPreference>

        <!-- Specific attribute -->
        <ListPreference
            android:key="specific_attribute_user"
            android:title="Specific Attribut"
            android:summary="Select specific attribut"
            android:entries="@array/specific_attribute_array"
            android:entryValues="@array/specific_attribute_values_array">
        </ListPreference>

        <!-- Lien iCal -->
        <EditTextPreference
            android:key="edit"
            android:title="iCal link"
            android:summary="Permit to edit the link of the account"
            android:dialogTitle="iCal link"
            android:dialogMessage="Must be like this: http://edt.epf.fr/pegasus/ical.php?v1=..."
            android:inputType="text"
            android:singleLine="true">
        </EditTextPreference>
    </PreferenceCategory>

    <!-- Navigation parameters -->
    <PreferenceCategory
        android:title="NAvigation parameters">

        <!-- Navigation mode -->
        <ListPreference
            android:key="mode_navigation"
            android:title="Navigation mode"
            android:summary="Select the guidance mode"
            android:entries="@array/navigation_array"
            android:entryValues="@array/navigation_values_array">
        </ListPreference>
    </PreferenceCategory>

</PreferenceScreen>