<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.filiereticsa.arc.augmentepf">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".activities.AugmentEPFApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.filiereticsa.arc.augmentepf.activities.HomePageActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.filiereticsa.arc.augmentepf.activities.PathPlanningActivity" />
        <activity android:name="com.filiereticsa.arc.augmentepf.activities.PathConsultationActivity" />
        <activity android:name="com.filiereticsa.arc.augmentepf.activities.ConnectionActivity" />
        <activity android:name="com.filiereticsa.arc.augmentepf.activities.SettingsActivity" />
        <activity android:name="com.filiereticsa.arc.augmentepf.activities.AdminActivity"
                  android:label="Admin."/>
        <activity
            android:name=".activities.CreateAccountActivity"/>
    </application>

</manifest>